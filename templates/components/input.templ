package components

templ Input(name, inputType, placeholder string) {
	<input
		type={ inputType }
		class="block w-full rounded-md bg-white px-3 py-1.5 text-sm text-gray-900 outline -outline-offset-1 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-primary sm:text-sm/6"
		placeholder={ placeholder }
		name={ name }
	/>
}
